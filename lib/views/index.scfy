<!DOCTYPE html>
<html style="height: 100%;width:100%">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/static/plugins/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/static/bussiness/index/index.css" />
    <script src="/static/plugins/jquery/jquery-3.4.1.min.js"></script>
    <script src="/static/plugins/popper/popper.min.js"></script>
    <script src="/static/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="/static/bussiness/index/index.js"></script>
    <title>{{.UserEntry.RemarkName}}</title>
</head>

<body style="height: 100%">
    <div class="row border border-primary" style="height:10%;width:100%;">
        <div class="col col-1 h-100">
            <img class="img-fluid h-100 w-100 mh-100 mw-100" src="/static/images/logo.png" alt="网站logo">
        </div>
        <div class="col col-10 h-100">
            <input type="text" style="height: 38px;width: 240px;margin-left:70%;background: transparent"
            placeholder="搜索联系人/组群">
        </div>
        <div class="col col-1 h-100">
            <a href="javascript:void(0)" onclick="">
                <img class="img-fluid h-75 w-50"  src="{{.UserEntry.Avatar}}" alt="用户头像" >
            </a>
        </div>
    </div>
    <div class="row" style="height: 90%;width:100%">
        <div class="col col-sm-2 col-md-2 col-xl-2 col-lg-2">
            <div class="row" style="height:100%;width:100%">
                <div class="col col-sm-3 col-md-3 col-xl-3 col-lg-3 border border-dark">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="pill" href="#talks">会话</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="pill" href="#friends">好友</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="pill" href="#group">群组</a>
                        </li>
                    </ul>
                </div>
                <div class="col tab-content col-sm-9 col-md-9 col-xl-9 col-lg-9 border border-secondary">
                    <div id="talks" class="tab-pane active">
                        <div class="row" style="height:10%">
                            <div class="col col-12 h-100 mh-100">
                                <h5 class="text-primary text-center">会话列表</h5>
                            </div>
                        </div>
                        <div class="row" style="height:90%">
                            <div class="col col-12 list-group" style="height:100%;">
                                {{range .TalkList}}
                                <a id="talk{{.ID}}" name="{{.RemarkName}}" href="javascript:void(0)"
                                    onclick="exTalker(this)" class="list-group-item list-group-item-action">
                                    <img class="img-fluid" style="height: 100%;width:20%" src="{{.Avatar}}" alt="头像">
                                    {{.RemarkName}}
                                </a>
                                {{end}}
                                <a href="#" class="list-group-item list-group-item-success">成功列表项</a>
                                <a href="#" class="list-group-item list-group-item-secondary">次要列表项</a>
                                <a href="#" class="list-group-item list-group-item-info">信息列表项</a>
                                <a href="#" class="list-group-item list-group-item-warning">警告列表项</a>
                                <a href="#" class="list-group-item list-group-item-danger">危险列表项</a>
                                <a href="#" class="list-group-item list-group-item-primary">主要列表项</a>
                                <a href="#" class="list-group-item list-group-item-dark">深灰色列表项</a>
                                <a href="#" class="list-group-item list-group-item-light">浅色列表项</a>
                            </div>
                        </div>
                    </div>
                    <div id="friends" class="tab-pane fade">
                        <div class="row" style="height:10%">
                            <div class="col col-12 h-100 mh-100" >
                                <h5  class="text-center text-primary h5">好友列表</h5>
                            </div>
                        </div>
                        <div class="row" style="height:90%">
                            <div class="col col-12 list-group" style="height:100%">
                                {{range .FriendList}}
                                <a id="friend{{.ID}}" name="{{.RemarkName}}" href="#"
                                    class="list-group-item list-group-item-action">
                                    <img class="img-fluid" style="height: 100%;width:20%" src="{{.Avatar}}" alt="头像">
                                    {{.RemarkName}}
                                    <span class="badge badge-pill badge-danger float-right">99+</span></a>
                                {{end}}
                                <a href="#" class="list-group-item list-group-item-success">成功列表项</a>
                                <a href="#" class="list-group-item list-group-item-secondary">次要列表项</a>
                                <a href="#" class="list-group-item list-group-item-info">信息列表项</a>
                                <a href="#" class="list-group-item list-group-item-warning">警告列表项</a>
                                <a href="#" class="list-group-item list-group-item-danger">危险列表项</a>
                                <a href="#" class="list-group-item list-group-item-primary">主要列表项</a>
                                <a href="#" class="list-group-item list-group-item-dark">深灰色列表项</a>
                                <a href="#" class="list-group-item list-group-item-light">浅色列表项</a>
                            </div>
                        </div>
                    </div>
                    <div id="group" class="tab-pane fade">
                        <div class="row" style="height: 10%">
                            <div class="col col-12 h-100">
                                <h5 class="text-center h5 text-primary">群组列表</h5>
                            </div>
                        </div>
                        <div class="row" style="height: 90%">
                            <div class="col col-12 list-group" style="height: 100%">
                                {{range .GroupList}}
                                <a id="group{{.ID}}" name="{{.RemarkName}}" href="#"
                                    class="list-group-item list-group-item-action">
                                    <img class="img-fluid" style="height: 100%;width:20%" src="{{.Avatar}}" alt="头像">
                                    {{.RemarkName}}
                                    <span class="badge badge-pill badge-danger float-right">99+</span></a>
                                {{end}}
                                <a href="#" class="list-group-item list-group-item-success">成功列表项</a>
                                <a href="#" class="list-group-item list-group-item-secondary">次要列表项</a>
                                <a href="#" class="list-group-item list-group-item-info">信息列表项</a>
                                <a href="#" class="list-group-item list-group-item-warning">警告列表项</a>
                                <a href="#" class="list-group-item list-group-item-danger">危险列表项</a>
                                <a href="#" class="list-group-item list-group-item-primary">主要列表项</a>
                                <a href="#" class="list-group-item list-group-item-dark">深灰色列表项</a>
                                <a href="#" class="list-group-item list-group-item-light">浅色列表项</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-sm-10 col-md-10 col-xl-10 col-lg-10">
            <div class="row border border-bottom-1" style="height:10%;">
                <div class="col col-12" id="talker" talkerID="">
                    <div class="row" style="height: 100%">
                        <div class="col col-1" style="height: 100%">
                            <img class="img-fluid" id="talkerImage" style="width:60%">
                        </div>
                        <div class="col col-2">
                            <div class="row" style="height: 50%">
                                <div id="talkerRemarkName" class="col col-12"></div>
                            </div>
                            <div class="row" style="height: 50%">
                                <div id="talkerSignature" class="col col-12"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="height:70%;">
                <div class="col col-12"></div>
            </div>
            <div class="row border border-1" style="height:20%;">
                <div class="col col-12">
                    <div class="row bg-light" style="height: 30%;">
                        <ul class="nav nav-tab">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#text">会话</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#image">图片</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#file">文件</a>
                            </li>
                        </ul>
                    </div>
                    <div class="row tab-content" style="height: 70%;">
                        <div id="text" class="tab-pane active" style="height: 100%;width:100%">
                            <div class="row" style="height: 100%">
                                <div class="col col-11">
                                    <input id="message" class="h-100 w-100" type="text" placeholder="请输入发送的内容">
                                </div>
                                <div class="col col-1">
                                    <button id="send" class=" btn btn-primary" onclick="sendMesage()"
                                        style="height: 100%;width:100%" disabled="disabled">
                                        <h3 class="text-center">发送</h3>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div id="image" class=" tab-pane fade" style="height: 100%;width:100%">
                            <div class="row" style="height: 100%">
                                <div class="col col-19  custom-file">
                                    <input type="file" class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">选择图片</label></div>
                                <div class="col col-3"></div>
                            </div>

                        </div>
                        <div id="file" class=" tab-pane fade custom-file">
                            <input type="file" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">选择文件</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>